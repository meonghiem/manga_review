<h1>マンガー</h1>

<% if @mangas.count > 0 %>
<!-- <button class="btn btn-outline-success my-2 my-sm-0" href="sort/sort">Sort</button> -->
<form action="sort/sort">
    <button class=" btn btn-outline-success my-2 my-sm-0" type="submit">並べる</button>
</form>
<form class="form-inline my-2 my-lg-0" action="/search/search">
    <input name="keyword" class="form-control mr-sm-2" type="text" placeholder="探して" arial-label="Search">
    <button class=" btn btn-outline-success my-2 my-sm-0" type="submit">検索</button>
</form>
<table class="table">
  <thead class="table-dark fs-5">
    <tr>
      <th>タイトル</th>
      <th>種類</th>
      <th>著者</th>
      <th>説明</th>
    </tr>
  </thead>

  <tbody>
    <% @mangas.each_with_index do |manga| %>
      <tr>
        <td><%= link_to manga.title, manga, class: "btn btn-outline-primary text-break" %> </td>
        <td><%= link_to manga.get_category, manga.category, class: "btn btn-outline-dark" %> </td>
        <td><%= link_to manga.get_author, manga.author, class: "btn btn-outline-dark " %> </td>
        <% if manga.description != "" %>
          <td><%= link_to manga.description, "#", class: "btn btn-outline-dark text-break text-start" %> </td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <p class="fs-4">No manga</p>
<% end %>

<br>

<%= link_to '新しいマンガ', new_manga_path, class: "btn btn-outline-success" %>
