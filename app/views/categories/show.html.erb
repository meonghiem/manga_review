<p class="fs-3">
<strong>Category:</strong>
<%= link_to @category.category, "#", class:"btn btn-outline-dark" %>
</p>

<p class="fs-3">
<strong>Detail:</strong>
<% if @category.detail != "" %>
  <%= link_to @category.detail, "#", class:"btn btn-outline-dark" %>
<% end %>
</p>

<div class="btn-group" role="group">
    <%= link_to 'Back', categories_path, class:"btn btn-outline-dark" %>
  <%= link_to 'Edit', edit_category_path(@category), class:"btn btn-outline-primary" %>     
  <td><%= link_to 'Delete', @category, method: :delete, data: { confirm: 'Are you sure?'},  class: "btn btn-outline-danger" %></td>
</div>

<br><br><br>

<p class="fs-2">
  Manga: <%= @category.mangas.count %> 
</p>

<% if @category.mangas.count > 0%>
<table class="table fs-6">
  <thead class="table-dark">
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @category.mangas.each_with_index do |manga, i| %>
      <tr>
        <td><%= link_to i+1, "#", class:"btn btn-outline-primary" %></td>
        <td><%= link_to manga.title, manga, class:"btn btn-outline-dark" %></td>
        <td><%= link_to manga.get_author, manga.author, class:"btn btn-outline-dark" %></td>
        <% if manga.description != "" %>
          <td><%= link_to manga.description, "#", class:"btn btn-outline-dark" %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>