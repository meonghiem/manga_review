<h1>種類</h1>

<% if @categories.count > 0 %>
<table class="table">
  <thead class="table-dark fs-5">
    <tr>
      <th>種類</th>
      <th>詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.category, category, class: "btn btn-outline-primary" %> </td>
        <% if category.detail != "" %>
          <td><%= link_to category.detail, "#", class: "btn btn-outline-dark text-break text-start" %> </td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p class="fs-4">種類がない</p>
<% end %>

<br>

<%= link_to '新しい種類', new_category_path, class:"btn btn-outline-success" %>
